#!/bin/bash

if ! command -v mpg123 >/dev/null; then
  echo ""
  echo "‚ö†Ô∏è  'mpg123' is required to play the anthem."
  echo "   It seems to be missing from your system."
  echo ""
  echo "üõ†  Install it using Homebrew:"
  echo "   brew install mpg123"
  echo ""
  exit 1
fi

if [[ -f "${HOMEBREW_PREFIX}/share/kimigayo/mp3/kimigayo.mp3" ]]; then
  MP3_PATH="${HOMEBREW_PREFIX}/share/kimigayo/mp3/kimigayo.mp3"
else
  MP3_PATH="$(dirname "$0")/../mp3/kimigayo.mp3"
fi

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
  cat <<EOF
kimigayo - A minimal CLI to play the Japanese national anthem üáØüáµ

Usage:
  kimigayo [--no-flag] [--help|-h]

Options:
  --no-flag     Disable the üáØüáµ flag in lyrics display (for non-monospaced fonts)
  --help, -h    Show this help message

Note:
  Make sure 'mpg123' is installed. Install it via Homebrew if missing:
    brew install mpg123
EOF
  exit 0
fi

# set FLAG_MODE
FLAG_MODE=true
[ "$1" = "--no-flag" ] && FLAG_MODE=false

if [ "$FLAG_MODE" = true ]; then
  FLAG="üáØüáµ"
  FLAG_LINE="‚îÄ‚îÄ"
  FLAG_SPACE="  "
else
  FLAG=""
  FLAG_LINE=""
  FLAG_SPACE=""
fi

LYRICS="
  ‚îå‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ"$FLAG_LINE"‚îÄ‚îÄ‚îÄ‚îê
  ‚îÇ    Ëãî  Â∑å  „Åï  ÂçÉ  Âêõ  $FLAG   ‚îÇ
  ‚îÇ    „ÅÆ  „Å®  „Åñ  ‰ª£  „Åå  "$FLAG_SPACE"   ‚îÇ
  ‚îÇ    „ÇÄ  „Å™  „Çå  „Å´  ‰ª£  "$FLAG_SPACE"   ‚îÇ
  ‚îÇ    „Åô  „Çä  Áü≥  ÂÖ´  „ÅØ  "$FLAG_SPACE"   ‚îÇ
  ‚îÇ    „Åæ  „Å¶  „ÅÆ  ÂçÉ      "$FLAG_SPACE"   ‚îÇ
  ‚îÇ    „Åß          ‰ª£      "$FLAG_SPACE"   ‚îÇ
  ‚îÇ                „Å´      "$FLAG_SPACE"   ‚îÇ
  ‚îî‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ"$FLAG_LINE"‚îÄ‚îÄ‚îÄ‚îò
"

# Clear screen and hide cursor
clear
tput civis

# Display the lyrics (vertical-style layout)
echo -e "$LYRICS"

# Play the anthem (suppress all mpg123 output)
mpg123 "$MP3_PATH" >/dev/null 2>&1

# Clear screen and restore cursor
clear
tput cnorm
